<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    card_view:cardCornerRadius="25dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="8dp"
    android:gravity="center_horizontal"
    android:padding="25dp"

    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mo"
        android:background="#FEFFFA"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FED54F"
            android:layout_gravity="top"
            android:gravity="top"
            android:orientation="vertical">

            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/rounded_button"-->
                <!--android:layout_gravity="right"-->
                <!--android:textSize="10dp"-->
                <!--android:text="Bookmark This!"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:backgroundTint="#EE5351"/>-->

        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/apple"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1cb0f6"
            android:text="Word"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/sample_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary Text"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@android:color/white"
            android:textColor="#626f75"
            android:padding="@dimen/fab_margin"
            android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FED54F"
        android:layout_gravity="top"
        android:gravity="top"
        android:orientation="vertical">



        <TextView
            android:id="@+id/bookmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe for new word"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:background="#3DC28B"
            android:textColor="@android:color/white"
            android:padding="@dimen/fab_margin"
            android:layout_weight="1"/>
        </LinearLayout>
        <!--<TextView-->
            <!--android:id="@+id/secondary_text"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Secondary Text"-->
            <!--android:padding="@dimen/fab_margin"-->
            <!--android:gravity="center"-->
            <!--android:textSize="20dp" />-->

    </LinearLayout>
</android.support.v7.widget.CardView>